@model WebApplication4.Models.LoginModel

@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center my-5">Iniciar Sesión</h1>

<p class="text-center">@TempData["Mensaje"]</p>

<h4 class="text-center my-2">@TempData["RegistradoOk"]</h4>

<br />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>

        <div>
            <a asp-action="Registrar" asp-controller="Usuarios">No estas registrado?</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
